<div class="container_claim">
<div class="card">
  <div class="info-container">
    <%= simple_form_for([realty, claim], html: { class: 'form', multipart: true }) do |form| %>
      <% if claim.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= pluralize(claim.errors.count, "error") %> on ne peut pas sauvegarder</h2>
          <ul>
            <% claim.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

  <%= simple_form_for([@realty, @claim]) do |f| %>
    <%= f.input :photo, as: :file %>
    <%= f.input :title, label: "Titre" %>
    <%= f.input :content, label: "Contenu" %>
    <%= f.button :submit, "Ajouter le document", class: "btn btn-primary" %>
      <% end %>
<% end %>
  </div>
</div>
</div>
