<div class="btn-show">
  <%= link_to realty_claims_path(@claim.realty), class: "btn btn-primary" do %>
    <i class="fa-sharp fa-solid fa-arrow-left"></i>
  <% end %>
</div>
<div class="titre-show_claim">
<h3>Claim</h3>
</div>

<div class="card">
  <div class="card-body">
    <h5 class="card-title"><strong>Title:</strong> <%= @claim.title %></h5>
    <h5 class="card-title"><strong>Content:</strong> <%= @claim.content %></h5>
    <h5 class="card-title"><%= @claim.realty.name %></h5>
    <h5 class="card-title"></strong> <%= @claim.tenant.full_name %></h5>

    <p class="card-text"><strong>Content:</strong> <%= @claim.content %></p>
  </div>
  <% if @claim.photo.attached? %>
    <%= image_tag(@claim.photo) %>
  <% else %>
    <p>No photo available</p>
  <% end %>
</div>
<div class="btn-claim-edit">
  <% if @claim.tenant == current_user %>
    <%= link_to 'Mettre Ã  jour', edit_realty_claim_path(@claim.realty, @claim), class: "btn btn-primary" %>
  <% end %>
</div>

<% if current_user == @claim.realty.user && @claim.status == 'pending' %>
  <%= link_to 'Accept', accept_claim_path(@claim), data: { turbo_method: :patch }, class: "btn-primary"  %>
  <%= link_to 'refuse', refuse_claim_path(@claim), data: { turbo_method: :patch }, class: "btn-primary"  %>
<% end %>

<% if @claim.status == 'in progress' %>
  <%= link_to 'Done', done_claim_path(@claim), data: { turbo_method: :patch }, class: "btn-primary" %>
<% end %>
